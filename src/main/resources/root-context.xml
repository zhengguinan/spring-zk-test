<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<!-- 自动扫描 -->
	<context:component-scan base-package="com" />

	<!-- 加载本地数据源配置信息 -->
	<context:property-placeholder location="classpath:zk.properties" />
	<bean class="com.gxl.test.ConnectionZk" init-method="init">
		<constructor-arg name="zk_address" value="${address}" />
		<constructor-arg name="session_timeout" value="${session.timeout}" />
		<constructor-arg name="usernamePath" value="${username.path}" />
		<constructor-arg name="passwordPath" value="${password.path}" />
		<constructor-arg name="id" value="${id.path}" />
	</bean>
</beans>